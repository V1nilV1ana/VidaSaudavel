<head>
    <link rel="stylesheet" href="/public/css/conta.css" type="text/css">
</head>
<body>
    <div class="container">
        <div class="card">
            <form action="/auth/register" method="POST">
            <h1>Cadastramento</h1>
            <div class="label-float">
                <input type="email" name="email" required>
                <label>E-MAIL</label>
            </div>
            <div class="label-float">
                <input type="text" name="name" required>
                <label>Nome</label>
            </div>
            <div class="label-float">
                <input type="password" name="password" required minlength="6">
                <label>Senha</label>
            </div>

            <div class="justify-center">
                <button type="submit">Cadastro</button>
            </div>
            </form>
            <div class="justify-center">
                <hr>
            </div>
            

            <p><a href="/login" id="login">Pagina de Login </a></p>
        </div>
    </div>
</body>